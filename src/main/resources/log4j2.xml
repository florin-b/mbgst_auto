<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">


	<Properties>
		<Property name="log-path">webapplogs/</Property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{dd-MMM-yyyy HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<RollingFile name="RollingFile" fileName="${log-path}/MobiGEST.log"
			filePattern="${log-path}/WebSFATest-%d{dd-MMM-yyyy}-%i.log">
			<PatternLayout
				pattern="%d{dd-MMM-yyyy HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="100 KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>
	</Appenders>


	<Loggers>
		<Logger name="com.foo.Logger" level="trace">
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile" />
		</Root>
	</Loggers>



</Configuration>